{
  "name": "eren-seyfi/codeigniter-vite-plugin",
  "description": "Laravel-like @vite() helper for CodeIgniter 4",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "codeigniter",
    "codeigniter4",
    "vite",
    "assets",
    "manifest",
    "php"
  ],
  "homepage": "https://github.com/Eren-Seyfi/codeigniter-vite-plugin",
  "support": {
    "issues": "https://github.com/Eren-Seyfi/codeigniter-vite-plugin/issues",
    "source": "https://github.com/Eren-Seyfi/codeigniter-vite-plugin"
  },
  "authors": [
    {
      "name": "Eren Seyfi",
      "email": "eren50seyfi@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "codeigniter4/framework": "^4.6"
  },
  "autoload": {
    "psr-4": {
      "Eren\\CodeIgniterVitePlugin\\": "src/"
    },
    "files": [
      "src/Helpers/vite_helper.php"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
